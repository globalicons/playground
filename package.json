{
  "name": "playground",
  "version": "1.0.0",
  "description": "Builder kit for building WYSIWYG content on the EazyEd platform",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
